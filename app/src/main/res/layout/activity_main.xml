<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_principal"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edtPeso"
        android:background="@drawable/edit_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="@color/grey_light"
        android:hint="Digite o seu peso:"
        android:textStyle="italic"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtAltura"
        android:background="@drawable/edit_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edtPeso"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Digite sua altura:Ex:1.75"
        android:textStyle="italic"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:textColorHint="@color/grey_light"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_Calcul"
        android:background="@drawable/button_personalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="calcule"/>

    <ImageView
        android:id="@+id/imageView_imc"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        app:srcCompat="@drawable/imc_" />

</RelativeLayout>
